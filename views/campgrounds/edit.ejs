<% layout("layouts/boilerplate") -%>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campSelect.id %>?_method=PUT" method="post" class="validated-form" novalidate 
                enctype="multipart/form-data">
                <div class="mb-2">
                    <label class="from-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" value="<%= campSelect.title %>"
                        required>
                    <div class="valid-feedback"> Looks good! </div>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value="<%= campSelect.location %>" required>
                    <div class="valid-feedback"> Looks good! </div>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="image">Add images</label>
                    <input class="form-control" type="file" name="image" id="image" multiple>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="Price"
                            aria-describedby="price-label" name="campground[price]" value="<%= campSelect.price %>" required>
                        <div class="valid-feedback"> Looks good! </div>
                    </div>
                </div>
                <div class="mb-2">
                    <label class="from-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        required><%= campSelect.description %></textarea>
                    <div class="valid-feedback"> Looks good! </div>
                </div>
                <div class="mb-2">
                    <% campSelect.images.forEach(function(img, i) { %> 
                       <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                       <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                    <% }) %> 
                </div>

                <div class="mb-2">
                    <button class="btn btn-info" type="submit">Update Campground</button>
                </div>

            </form>
            <a href="/campgrounds/<%= campSelect.id %> ">Back to Campground</a>
        </div>
    </div>